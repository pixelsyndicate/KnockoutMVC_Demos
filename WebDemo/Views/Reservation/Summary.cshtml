@model IEnumerable<WebDemo.Models.Reservation>

<div class="panel-heading">Reservation Summary</div>
<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr><td>ID</td><td>Name</td><td>Location</td></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ReservationId
                    </td>
                    <td>@item.ClientName</td>
                    <td>@item.Location</td>
                    <td>
                        @Html.ActionLink("Remove", "Delete",
                    new { id = item.ReservationId },
                    new { @class = "btn btn-xs btn-primary " })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>